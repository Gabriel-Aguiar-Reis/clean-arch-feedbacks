{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "src/",
    "isolatedModules": true,
    "paths": {
      "@/*": ["./*"]
    },
    "skipLibCheck": true,
    "incremental": true,
    "allowJs": true
  }
}
